<div class="jumbotron">
  <h1 class="display-4">Pitchfork Album Review Scraper</h1>
  <p class="lead">Check out all of the latest Pitchfork album reviews, and leave comments for each review!</p>
  <hr class="my-4">
  <p>Scrape new articles!</p>
  <a class="btn btn-primary btn-lg" id="btn-scrape" href="#" role="button">Scrape</a>
</div>

<div class="card">
  <div class="card-header">
    Album Reviews
  </div>
  <div class="card-body">
    {{#each reviews}}
        <div class="card">
            <div class="row">
                <div class="col-md-3">
                    <div class="card-body">
                        <a href="{{this.link}}"><h3 class="card-title">{{this.album}}</h3>
                        {{this.artist}}</a>
                        <img src="{{this.img}}" class="card-img" alt="Album art" style="max-width: 320px;">
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="card-body">
                       <form class="mt-auto">
                            <div class="form-group">
                                <input type="text" class="form-control" id="inputComment" placeholder="Add your comment">
                            </div>
                            <button type="submit" class="btn btn-primary" id="btn-comment" parentReviewID="{{this._id}}">Submit</button>
                        </form>
                        <br>
                        <p class="card-text">Comments</p>
                        <div class="comments" parentReviewID="{{this._id}}"></div>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
  </div>
</div>


<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
<script src="/js/index.js"></script>